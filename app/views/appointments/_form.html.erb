<%= form_for @appointment do |f| %>
	<%= f.text_field :title, placeholder: 'Voer de titel in' %>
	<%= f.text_area :body, placeholder: 'Beschrijving' %>
	<%= f.text_field :date, placeholder: 'Datum' %>
	<%= f.time_field :start_time, placeholder: 'Begintijd' %>
	<%= f.time_field :end_time, placeholder: 'Eindtijd' %>
	<%= f.text_field :location, placeholder: 'Locatie' %>
	<%= f.submit 'Aanmaken', data: { disable_with: 'Aan het versturen...' } %>
<% end %>