<h1>Afspraken</h1>

<div id="appointments">
	<% @appointments.each do |appointment| %>
		<%= appointment.title %>
		<%= appointment.body %>
		<%= appointment.date %>
		<%= appointment.start_time %>
		<%= appointment.end_time %>
		<%= appointment.location %>
	<% end %>
</div>

<p><%= link_to 'Nieuwe afspraak aanmaken', new_appointment_path %></p>