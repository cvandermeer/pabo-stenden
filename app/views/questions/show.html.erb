<div class="avatar">
	<%# user.profile-picture %>
</div>

<div class="question">
	<span>
		Door: <%# question.user.name %>
	</span>
	<h2><%= @question.title %></h2>
	<span>
		<%= @question.answers.count %> antwoorden
	</span>
	<% if @question.body? %>
		<p>
			<%= @question.body %>
		</p>
	<% end %>
</div>

<ul class="answers">
	<% @question.answers.reverse.each do |answer| %>
		<li class="<%= cycle('odd', 'even') %>">
			<span><%# answer.user.name %> zei op <%= answer.created_at.strftime("%d-%m-%d") %> om <%= answer.created_at.strftime("%H:%M") %></span>
			<%= answer.body %>
		</li>
	<% end %>
</ul>

<div class="answer-form">
	<%= render "answers/form" %>
</div>