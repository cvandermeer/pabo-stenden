<h1><%= @question.title %></h1>
<p><%= @question.body %></p>
<small>
  <%= link_to "Back", questions_path %> | 
  <%= link_to "Edit", edit_question_path(@question) %> | 
  <%= link_to "Delete", @question, :method => :delete, data: { :confirm => "Are you sure?" } %> |
  Placed <%= time_ago_in_words @question.created_at %> ago
</small>
<hr>

<h2>Answers</h2>

<% @question.answers.reverse.each do |answer| %>
  <p><%= answer.body %></p>
  <small>
    <p><%= time_ago_in_words answer.created_at %> ago</p>
  </small>
  <hr>
<% end %>

<%= render "answers/form" %>