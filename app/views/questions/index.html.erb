<ul class="questions-overview">
	<% @questions.each do |question| %>
		<li>
			<span>
				Door: <%= question.user.email %>
			</span>
				<%= link_to question.title, question %>
			<span> 
				<% if question.answers.count < 1 %>
					<span class="red">
				<% else %>
					<span class="green">
				<% end %>

				<%= question.answers.count %> antwoorden
				</span>
			</span>
		</li>
	<% end %>
</ul>